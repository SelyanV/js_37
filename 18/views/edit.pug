extends layout

block content
    h1 Все курсы академии

    form(method='POST')
            .fieldset.form-group
                label(for='name') Name:
                input.form-control(id='name', type='text', name='name', placeholder='Введите имя курса', value = course.name)
                small.text-muted Добавьте свой новый курс.
            button.btn.btn-primary(type="submit") Сохранить курс
            a.btn.btn-default(href="courses") Отмена